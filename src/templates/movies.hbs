<li class="gallery-list__item" data-id="{{id}}">
    <img class="gallery-list__img" src="https://image.tmdb.org/t/p/original{{poster_path}}" width="274px" height="398px"
        alt="">
    <h3 class="gallery-list__item-title">{{title}}</h3>
    <div class="film-info-cont">
        <p class="film-info">{{genre_ids}}
            <span class="film-info__slash">|</span>
            <span class="film-info__year">{{ release_date}}</span>
            <span class="film-info__rate">{{vote_average}}</span>
        </p>
    </div>
</li>